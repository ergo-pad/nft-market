{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@theme/*": ["styles/theme/*"],
      "@public/*": ["public/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utilities/*"],
      "@hooks/*": ["hooks/*"],
      "@contexts/*": ["contexts/*"],
      "@utilities/*": ["utilities/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "additional.d.ts", "components/forms/InputSlider.tsx.bak", "pages/users/[id].tsx.bak"], 
  "exclude": ["node_modules"]
}
